  <content>{{velocity}}
#set ($discard = $xwiki.ssx.use('Licenses.WebHome'))
#set ($discard = $xwiki.jsx.use('Licenses.WebHome'))
#set ($licensingConfigDoc = $xwiki.getDocument('Licenses.Code.LicensingConfig'))
#set ($ownerObj = $licensingConfigDoc.getObject('Licenses.Code.LicensingOwnerClass'))
{{html clean=false}}
  &lt;form id="ownerDetails" target="_blank" class="xform half" action="${licensingConfigDoc.storeBuyURL}" method="post"&gt;
    &lt;fieldset class='header'&gt;
      &lt;legend&gt;$services.localization.render('licensor.ownerDetails.heading')&lt;/legend&gt;
      &lt;p&gt;$services.localization.render('licensor.ownerDetails.hint')&lt;/p&gt;
      &lt;dl&gt;
        #foreach ($prop in $ownerObj.properties)
          &lt;dt&gt;&lt;label for="${prop.name}"&gt;$services.localization.render("licensor.ownerDetails.${prop.name}.label")&lt;/label&gt;&lt;/dt&gt;
          &lt;dd&gt;&lt;input type="text" name="${prop.name}" id="${prop.name}" value="$!{prop.value}" /&gt;&lt;/dd&gt;
        #end
        &lt;dt&gt;&lt;label for="instanceId"&gt;$services.localization.render('licensor.ownerDetails.instanceId.label')&lt;/label&gt;&lt;/dt&gt;
        &lt;span class="xHint"&gt;$services.localization.render('licensor.ownerDetails.instanceId.hint')&lt;/span&gt;
        &lt;dd&gt;&lt;input type="text" name="instanceId" id="instanceId" value="${services.instance.getInstanceId()}" readonly /&gt;&lt;/dd&gt;
      &lt;/dl&gt;
    &lt;/fieldset&gt;
  &lt;/form&gt;
  &lt;fieldset class='header'&gt;
    &lt;legend&gt;$services.localization.render('licensor.licenseManager.heading')&lt;/legend&gt;
    $services.localization.render('licensor.licenseManager.hint')
  &lt;/fieldset&gt;
{{/html}}
#set($columns = ['name', 'status', 'wiki', 'actions'])
#set($columnsProperties = {
  'name'    : {'type' : 'text'},
  'status'  : {'type' : 'text'},
  'wiki'    : {'type' : 'text'},
  'actions' : {'type' : 'text', 'html':true}
})
#set($options = { 
  'resultPage':'Licenses.Code.LicenseJSON',
  'translationPrefix' : 'licensor.'
})
#livetable('licenseManager' $columns $columnsProperties $options)
{{html clean=false}}
  &lt;form id="addLicense" class="xform half" action="$xwiki.getURL('Licenses.Code.AddLicense', 'get', 'outputSyntax=plain')" method="post"&gt;
    &lt;fieldset class='header'&gt;
      &lt;legend&gt;$services.localization.render('licensor.addLicense.heading')&lt;/legend&gt;
      &lt;p&gt;$services.localization.render('licensor.addLicense.hint')&lt;/p&gt;
      &lt;textarea name="license" id="license" rows="5"&gt;&lt;/textarea&gt;
      &lt;input class="btn btn-success" type="submit" value="Add License"&gt;
    &lt;/fieldset&gt;
  &lt;/form&gt;
{{/html}}
{{/velocity}}</content>
