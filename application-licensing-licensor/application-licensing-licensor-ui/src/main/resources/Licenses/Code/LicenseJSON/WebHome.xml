#if ("$!{request.xpage}" == 'plain')
  $response.setContentType('application/json')
#end
#set ($jsonMap = {})
#set ($licensorId = 'com.xwiki.licensing:application-licensing-licensor-api')
#set ($payingExtensions = $services.extension.installed.getBackwardDependencies($licensorId, "wiki:${xcontext.database}"))
#set ($discard = $jsonMap.put('totalrows', $payingExtensions.size()))
#set ($discard = $jsonMap.put('returnedrows', $payingExtensions.size()))
#set ($discard = $jsonMap.put('offset', $request.offset))
#set ($discard = $jsonMap.put('reqNo', $request.reqNo))
#set ($discard = $jsonMap.put('rows', []))
#foreach ($extension in $payingExtensions)
  #set ($license = $services.licensor.licenseManager.get($extension.id))
  #set ($actions = "&lt;div class='licenseActions'&gt;")
  #setActions ($license.type $actions)
  #set ($actions = "${actions}&lt;/div&gt;")
  #set ($discard = $jsonMap.get('rows').add({
    'doc_viewable' : true,
    'name'   : $extension.name,
    'status' : $license.expirationDate,
    'actions': $actions
  }))
#end
$jsontool.serialize($jsonMap)

#macro (setActions $currentType $actions)
  #set ($url = $xwiki.getURL('GetLicense.WebHome', 'view', "extensionId=${extension.id}&amp;instanceId=${services.instance.getInstanceId()}&amp;licenseType="))
  #if ($currentType == 'FREE')
    #addAction ('PAID', 'success')
    #addAction ('TRIAL', 'primary')
  #elseif ($currentType == 'TRIAL')
    #addAction ('PAID', 'success')
  #end
#end

#macro (addAction $newType $cssClass)
  #set ($label = $services.localization.render("licensing.licensor.${newType.toLowerCase()}License.label"))
  #set ($actions = "${actions}&lt;a class='btn btn-${cssClass}' href='https://store.xwiki.com${url}${newType}'&gt;${label}&lt;/a&gt;")
#end
{{/velocity}}</content>
